<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/resPadding"
    android:gravity="center">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result2"
        android:textSize="@dimen/result2TxtSize"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/result2MargB"
        android:lineSpacingExtra="@dimen/result2Extra"/>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartAgain"
        android:textSize="@dimen/StartAgainTxtSize"/>

</LinearLayout>