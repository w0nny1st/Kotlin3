<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/resPadding"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/resultAnimationView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/result_animation" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result2"
        android:textSize="@dimen/result2TxtSize"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/result2MargB"
        android:lineSpacingExtra="@dimen/result2Extra"/>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartAgain"
        android:textSize="@dimen/StartAgainTxtSize"/>

    <Button
        android:id="@+id/historyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="История результатов"
        android:textSize="@dimen/StartAgainTxtSize"
        android:layout_marginTop="20dp"/>

</LinearLayout>